{
  "name": "electron-react-typescript-app",
  "productName": "EVIA electron app with react",
  "main": "out/main.js",
  "version": "0.1.0",
  "description": "POC for electron app",
  "license": "MIT",
  "private": true,
  "author": {
    "email": "igor.ilic@evia.de",
    "name": "Igor Ilic"
  },
  "build": {
    "appId": "com.Evia.Electron-React-App",
    "files": [
      "!src",
      "!docs",
      "!tsconfig.json",
      "!fuse.js",
      "!dev-app-update.yml",
      "!README.md",
      "!LICENSE",
      "!globals.d.ts"
    ],
    "linux": {
      "target": [
        "tar.gz"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ]
    }
  },
  "scripts": {
    "clean": "rimraf .fusebox out dist coverage",
    "compile": "set NODE_ENV=production ts-node fuse",
    "dist": "electron-builder --win --ia32 --x64",
    "draft": "electron-builder -p always --draft --mac --win --linux --ia32 --x64",
    "format": "prettier --write **/*.ts && tslint -p . --fix",
    "lint": "tslint --project .",
    "pack": "electron-builder --dir",
    "precommit": "lint-staged",
    "prepush": "npm-run-all typecheck lint",
    "sanity": "npm-run-all clean typecheck lint clean compile clean",
    "start": "ts-node fuse",
    "typecheck": "tsc -p . --noEmit --pretty"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "electron-is-dev": "^1.0.1",
    "electron-print": "^1.0.2",
    "electron-store": "^2.0.0",
    "electron-window-state-manager": "^0.3.2",
    "express": "^4.16.3",
    "glamor": "^2.20.40",
    "react": "16.5.2",
    "react-dom": "16.5.2"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.0",
    "@types/electron-is-dev": "^0.3.0",
    "@types/electron-store": "^1.3.0",
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.8",
    "@types/react-test-renderer": "^16.0.0",
    "auto-launch": "^5.0.5",
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4",
    "fuse-box": "^3.5.0",
    "husky": "^1.0.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-loader": "^5.2.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.1"
  },
  "jest": {
    "setupFiles": [
      "./test/setup.ts"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/mock-file.ts",
      "\\.(css|less)$": "<rootDir>/test/mock-style.ts"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "./node_modules",
      "./out",
      "./build",
      "./dist",
      "./test",
      "./docs",
      "\\.story.tsx$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false,
    "mapCoverage": true
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
